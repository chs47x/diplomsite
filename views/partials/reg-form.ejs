<form method="POST" action="/registration" id="reg-form" style="display: block;">
    <h1>Регистрация</h1>
    <div>
        <input type="text" id="username" name="username" placeholder="Имя" required>
    </div>
    <div>
        <input type="password" id="password" name="password" placeholder="Пароль" required>
    </div>
    <div>
        <input type="email" id="email" name="email" placeholder="Почта" required>
    </div>
    <div>
        <button type="submit" id = "submit-reg">Регистрация</button>
    </div>
    <p style = "color: #fff;">Есть учетная запись?</p>
    <p class="chngBtn" onclick="showWindow()">Войти</p>
    <p id="errorReg">пользователь с таким логином уже существует</p>
</form>